{
  "name": "banana-sales-backend",
  "version": "1.0.0",
  "description": "PostgreSQL backend for Banana Sales Tracker with real-time synchronization",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "db:setup": "psql -d banana_sales -f ../database/schema.sql",
    "db:reset": "psql -d postgres -c 'DROP DATABASE IF EXISTS banana_sales; CREATE DATABASE banana_sales;' && npm run db:setup"
  },
  "keywords": [
    "postgresql",
    "express",
    "websocket",
    "real-time",
    "sync",
    "sales",
    "api"
  ],
  "author": "Banana Sales Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "bugs": {
    "url": "https://github.com/your-repo/issues"
  },
  "homepage": "https://github.com/your-repo#readme"
}